<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#ffcbcbcb"/>
            <size
                android:height="25dp"
                android:width="25dp"/>
            <stroke
                android:width="3dp"
                android:color="#ff909090"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#ffededed"/>
            <size
                android:height="25dp"
                android:width="25dp"/>
            <stroke
                android:width="3dp"
                android:color="#ffacacac"/>
        </shape>
    </item>
</selector>