<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_hongbao_jishi"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/new_packet_share_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:src="@drawable/new_packet_close" />

        <ImageView
            android:id="@+id/new_packet_share_caishen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/caishen_jishi_donghua" />

        <TextView
            android:id="@+id/new_packet_share_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dialog_new_packet_share_title"
            android:text="活动倒计时"
            android:textColor="@color/common_red"
            android:textSize="16sp" />/>
    </RelativeLayout>

    <TextView
        android:id="@+id/new_packet_share_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="客官已领过开盘礼\n报备客户更多礼\n成交后佣金速送你"
        android:textColor="#88ffffff"
        android:textSize="12sp" />

    <Button
        android:id="@+id/new_packet_share_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_new_packet"
        android:includeFontPadding="false"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="更多楼盘"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:background="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="分享"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="1px"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="12dp"
        android:orientation="horizontal"
        android:paddingBottom="17dp">
        <ImageView
            android:id="@+id/new_packet_share_wx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_share_wx" />
        <ImageView
            android:id="@+id/new_packet_share_friend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_share_friend"
            android:layout_marginLeft="9dp"/>
        <ImageView
            android:id="@+id/new_packet_share_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_share_qq"
            android:layout_marginLeft="9dp"/>
        <ImageView
            android:id="@+id/new_packet_share_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/community_share_message"
            android:layout_marginLeft="9dp"/>
    </LinearLayout>
</LinearLayout>