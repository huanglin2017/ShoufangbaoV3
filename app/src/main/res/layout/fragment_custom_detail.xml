<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kupangstudio.shoufangbao.fragment.CustomDetailFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/custom_detail_name"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="王宝强" />

                <TextView
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="  " />

                <TextView
                    android:id="@+id/custom_detail_sex"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:text="先生" />

                <TextView
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="    " />

                <TextView
                    android:id="@+id/custom_detail_phone"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:text="13521455654" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="@color/divider_tiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="意向强度：" />

                <TextView
                    android:id="@+id/custom_detail_will"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginLeft="10dp"
                android:background="@color/divider_tiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="意向户型：" />

                <TextView
                    android:id="@+id/custom_detail_layout"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginLeft="10dp"
                android:background="@color/divider_tiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="意向面积：" />

                <TextView
                    android:id="@+id/custom_detail_size"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginLeft="10dp"
                android:background="@color/divider_tiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="意向价格：" />

                <TextView
                    android:id="@+id/custom_detail_price"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginLeft="10dp"
                android:background="@color/divider_tiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="房源类型：" />

                <TextView
                    android:id="@+id/custom_detail_type"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/divider_height"
                android:layout_marginLeft="10dp"
                android:background="@color/divider_tiao" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="备注：" />

                <TextView
                    android:id="@+id/custom_detail_remark"
                    style="@style/SmallTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@null" />
            </LinearLayout>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:layout_below="@id/titlebar"
                android:background="#f5f5f5"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="*智能匹配楼盘列表"
                android:textColor="#bab7b7"
                android:textSize="12sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.kupangstudio.shoufangbao.widget.MyListView
                    android:id="@+id/custom_detail_build"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:footerDividersEnabled="false"
                    android:headerDividersEnabled="false"
                    android:listSelector="#00ffffff"
                    android:overScrollMode="never"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:scrollbars="none" />
                <TextView
                    android:id="@+id/custom_detail_empty"
                    style="@style/ContentText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:text="暂无匹配房源"
                    />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
