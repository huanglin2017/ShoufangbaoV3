<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="227dp"
        android:layout_height="322dp"
        android:layout_centerInParent="true"
        android:background="@drawable/report_hongbao_pre"
        android:orientation="vertical">

        <TextView
            android:id="@+id/report_packet_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="106dp"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/report_packet_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:textColor="#ffdfa1"
            android:textSize="10sp" />
        <ImageView
            android:id="@+id/report_packet_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="92dp"
            android:src="@drawable/report_hongbao_btn" />
    </LinearLayout>
</RelativeLayout>