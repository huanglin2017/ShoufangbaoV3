<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/titlebar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="@color/white"
        android:orientation="vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/shape_bindphone_et"
            android:layout_weight="1"
            >
            <EditText
                android:id="@+id/et_phone"
                android:layout_weight="1"
                android:textColor="#be1a20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/login_edit_phone_left"
                android:drawablePadding="12dp"
                android:background="@null"
                android:hint="@string/login_edit_phone_hint"
                android:inputType="phone"
                android:digits="0123456789"
                android:textSize="14sp"
                android:paddingLeft="15dp"
                android:textColorHint="@color/divider_line" />
            <Button
                android:id="@+id/btn_huoquNum"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_wechat_message"
                android:text="获取验证码"
                android:textSize="12sp"
                android:layout_width="74dp"
                android:layout_height="25dp" />

        </LinearLayout>


        <EditText
            android:id="@+id/bind_phonenum_text"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:drawablePadding="12dp"
            android:layout_marginTop="-1dp"
            android:drawableLeft="@drawable/shape_bindphone_left"
            android:textColor="#be1a20"
            android:hint="验证码"
            android:background="@drawable/shape_bindphone_et"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/divider_line" />
        <EditText
            android:id="@+id/bind_phonenum_text_1"
            android:layout_width="match_parent"
            android:layout_marginTop="-1dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bindphone_et"
            android:drawablePadding="12dp"
            android:drawableLeft="@drawable/shape_bindphone_left"
            android:textColor="#be1a20"
            android:hint="邀请码(可选填)"
            android:visibility="gone"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:paddingLeft="15dp"
            android:textColorHint="@color/divider_line" />
    </LinearLayout>
    <Button
        android:id="@+id/btn_bind_phoneNum"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/shape_wechat_message"
        android:text="绑定手机"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>