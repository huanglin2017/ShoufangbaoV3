<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingLeft="1.0dip"
    android:paddingRight="1.0dip" >

    <TextView
        android:id="@+id/catalog"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#fafafa"
        android:paddingBottom="5dip"
        android:paddingLeft="4dip"
        android:paddingTop="4dip"
        android:textColor="#a0a0a0" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/catalog" >

        <ImageView
            android:id="@+id/item_custom_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:src="@drawable/item_custom_msg" />

        <ImageView
            android:id="@+id/item_custom_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/item_custom_msg"
            android:padding="10dp"
            android:src="@drawable/item_custom_call" />

        <ImageView
            android:id="@+id/item_custom_identity"
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="9dp"/>

        <TextView
            android:id="@+id/item_custom_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/item_custom_call"
            android:layout_toRightOf="@id/item_custom_identity"
            style="@style/SmallTitle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_custom_name"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/item_custom_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#5a5a5a"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/item_custom_times"
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:textColor="#5a5a5a"
                android:textSize="10sp"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>