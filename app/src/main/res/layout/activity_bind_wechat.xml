<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <RelativeLayout
        android:id="@+id/rt_bangding"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/logo_sfb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="75dp"
            android:background="@drawable/logo_sfb" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="75dp"
            android:background="@drawable/logo_weixin" />

        <ImageView
            android:id="@+id/logo_jiantou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/logo_jiantou" />
    </RelativeLayout>
    <!--解绑视图-->
    <RelativeLayout
        android:id="@+id/rt_jiebang"
        android:visibility="gone"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_weixin"
            android:layout_marginLeft="18dp"
            style="@style/BigTitle"
            android:text="微信："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/tv_weixin"
            style="@style/BigTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rt_bdcontent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:background="#f5f5f5"
        >

        <TextView
            android:layout_centerInParent="true"
            android:text="微信绑定之后，您将遇到更完美的小宝"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"
            android:textSize="14sp" />

    </RelativeLayout>
    <!--解绑之后的视图-->
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rt_jbcontent"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#f5f5f5"
        >

        <TextView
            android:layout_centerInParent="true"
            android:text="解除绑定后再次登录售房宝需要再次绑定或者重新注册！"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#323232"
            android:textSize="14sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btn_bangding"
            style="@style/ButtonStyle"
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:layout_centerInParent="true"
            android:text="立即绑定"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>