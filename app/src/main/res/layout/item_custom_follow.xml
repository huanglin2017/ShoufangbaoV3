<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/custom_follow_time"
        style="@style/ContentText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_horizontal"/>

    <LinearLayout
        android:id="@+id/custom_follow_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/custom_follow_time"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/custom_follow_zhuangtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/report_progress_undone" />

        <View
            android:id="@+id/custom_follow_line"
            android:layout_width="2dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="#f0f0f0" />
    </LinearLayout>

    <TextView
        android:id="@+id/custom_follow_type"
        style="@style/ContentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:maxLines="4"
        android:layout_toRightOf="@id/custom_follow_layout" />
</RelativeLayout>