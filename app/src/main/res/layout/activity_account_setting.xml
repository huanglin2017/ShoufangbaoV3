<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:isScrollContainer="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/set_lockpattern"
                    android:layout_width="match_parent"
                    android:layout_height="55.0dip"
                    android:background="@drawable/selector_account_setting">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="13dp"
                        android:text="@string/lock_pattern"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <ImageView
                        android:id="@+id/set_pointer"
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/common_rawright_black" />

                    <TextView
                        android:id="@+id/set_lockpattern_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toLeftOf="@id/set_pointer"
                        android:text="@string/close"
                        android:textColor="#464646"
                        android:textSize="15sp" />
                </RelativeLayout>

                <View
                    style="@style/DividerLine"
                    android:layout_marginLeft="13dp" />

                <LinearLayout
                    android:id="@+id/set_float_window"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:background="@drawable/selector_account_setting"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1.0"
                        android:text="@string/float_window"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/set_float_window_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toLeftOf="@id/set_pointer"
                        android:text="@string/open"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/common_rawright_black" />
                </LinearLayout>

                <View
                    style="@style/DividerLine"
                    android:layout_marginLeft="13dp" />

                <LinearLayout
                    android:id="@+id/set_push"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:background="@drawable/selector_account_setting"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1.0"
                        android:text="@string/push_switch"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/set_push_tip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10.0dip"
                        android:layout_toLeftOf="@id/set_pointer"
                        android:text="@string/open"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_marginRight="13dp"
                        android:src="@drawable/common_rawright_black" />
                </LinearLayout>

                <View
                    style="@style/DividerLine"
                    android:layout_marginLeft="13dp" />

                <LinearLayout
                    android:id="@+id/set_repassword"
                    android:layout_width="fill_parent"
                    android:layout_height="55.0dip"
                    android:background="@drawable/selector_account_setting"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="13dp"
                        android:layout_weight="1.0"
                        android:text="@string/modify_password"
                        android:textColor="#464646"
                        android:textSize="15sp" />

                    <ImageView
                        android:layout_width="12.0dip"
                        android:layout_height="12.0dip"
                        android:layout_marginRight="13dip"
                        android:src="@drawable/common_rawright_black" />
                </LinearLayout>

                <View
                    style="@style/DividerLine"
                    android:layout_marginLeft="13dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/set_phone_number"
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:background="@drawable/selector_account_setting"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1.0"
                    android:text="@string/modify_phone_num"
                    android:textColor="#464646"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:layout_marginRight="13dip"
                    android:src="@drawable/common_rawright_black" />
            </LinearLayout>

            <View
                style="@style/DividerLine"
                android:layout_marginLeft="13dp" />

            <LinearLayout
                android:id="@+id/account_cooper"
                android:layout_width="fill_parent"
                android:layout_height="55.0dip"
                android:background="@drawable/selector_account_setting"
                android:clickable="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1.0"
                    android:text="合作账号"
                    android:textColor="#464646"
                    android:textSize="15sp" />

                <ImageView
                    android:layout_width="12.0dip"
                    android:layout_height="12.0dip"
                    android:layout_marginRight="13dip"
                    android:src="@drawable/common_rawright_black" />
            </LinearLayout>

            <View
                style="@style/DividerLine"
                android:layout_marginLeft="13dp" />

            <Button
                android:id="@+id/set_logout"
                android:layout_width="250dp"
                android:layout_height="38dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_red_content"
                android:text="@string/logout"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>