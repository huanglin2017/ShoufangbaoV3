<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_hongbao_jishi"
    android:orientation="vertical"
    android:paddingBottom="45dp">

    <RelativeLayout
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:id="@+id/new_packet_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingBottom="30dp"
            android:paddingLeft="30dp"
            android:paddingTop="6dp"
            android:paddingRight="6dp"
            android:src="@drawable/new_packet_close" />

        <ImageView
            android:id="@+id/new_packet_caishen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:src="@drawable/caishen_jishi_donghua" />

        <TextView
            android:id="@+id/hongbao_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="175dp"
            android:text="活动倒计时"
            android:textColor="@color/common_red"
            android:textSize="16sp" />/>
    </RelativeLayout>

    <TextView
        android:id="@+id/new_packet_jishi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="00:00:00"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="27dp"
        android:background="#8effffff" />

    <Button
        android:id="@+id/new_packet_guang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:background="@drawable/btn_new_packet"
        android:includeFontPadding="false"
        android:paddingBottom="4dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="4dp"
        android:text="再去逛逛"
        android:textColor="@android:color/white"
        android:textSize="13sp" />
</LinearLayout>