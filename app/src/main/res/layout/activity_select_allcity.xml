<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <include
        android:id="@+id/center_city"
        layout="@layout/titlebar" />

    <TextView
        android:id="@+id/centercity_hint"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:textColor="#f15353"
        android:gravity="center"
        android:text="售房宝将陆续开通更多城市，敬请期待！"
        android:background="#f7f3f3"/>
    <ListView
        android:id="@+id/centercity_list"
        android:layout_above="@+id/centercity_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/center_city"
        android:divider="@null"
        android:listSelector="#00000000"
        android:scrollbars="none" />
    <com.kupangstudio.shoufangbao.widget.SideBar
        android:id="@+id/centercity_sidebar"
        android:layout_width="30dp"
        android:layout_marginTop="122dp"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_below="@id/center_city"
        android:layout_above="@id/centercity_hint"/>

    <TextView
        android:id="@+id/centercity_dialog"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_centerInParent="true"
        android:background="@drawable/common_roundradius_rec"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="25sp"
        android:visibility="invisible"/>
</RelativeLayout>