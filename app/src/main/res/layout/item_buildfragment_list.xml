                    android:src="@drawable/item_build_commission" />-->

                <TextView
                    android:id="@+id/item_homepage_commissionname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:text="@string/commission"
                    android:background="@color/common_title_bar"
                    android:textColor="@color/white"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/item_build_commission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/item_homepage_commissionname"
                    android:singleLine="true"
                    android:textColor="#be1a20"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    android:background="@drawable/bg_main_buildlist"
                    android:textSize="13sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_height="1px"
        android:layout_width="match_parent"
        android:background="@color/divider_line"
        android:layout_marginTop="10dp" />
