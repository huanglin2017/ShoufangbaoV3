<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="163dp">
        <com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/banner_fragment_main"
            android:layout_width="match_parent"
            android:layout_height="163sp" />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/banner_transparent"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:orientation="horizontal">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/header_signMoney"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/header_iv_signMoney"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@drawable/header_main_sign_money" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="@string/sign_money"
                android:textColor="#5a5a5a"
                android:textSize="12sp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/header_myReport"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/header_iv_myReport"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@drawable/header_main_my_report" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="@string/my_report"
                android:textColor="#5a5a5a"
                android:textSize="12sp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/header_calTool"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/header_iv_calTool"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@drawable/header_main_cal_tool" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="@string/cal_tool"
                android:textColor="#5a5a5a"
                android:textSize="12sp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <LinearLayout
            android:id="@+id/header_brand"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/header_iv_brand"
                android:layout_width="49dp"
                android:layout_height="49dp"
                android:src="@drawable/header_main_cooperation_brand" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:includeFontPadding="false"
                android:text="@string/private_make"
                android:textColor="#5a5a5a"
                android:textSize="12sp" />
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/divider_tiao" />

