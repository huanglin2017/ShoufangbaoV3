<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <include layout="@layout/titlebar" />

    <EditText
        android:id="@+id/sug_text"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/login_bg_edit"
        android:gravity="top"
        android:textColorHint="@color/divider_line"
        android:textSize="12sp"
        android:hint="@string/custom_addfollow_edit"/>

    <Button
        android:id="@+id/sug_commit"
        android:layout_width="148dp"
        android:layout_height="30dp"
        style="@style/ButtonStyle"
        android:layout_marginTop="18dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/custom_addfollow_btn"
        android:gravity="center" />
</LinearLayout>
