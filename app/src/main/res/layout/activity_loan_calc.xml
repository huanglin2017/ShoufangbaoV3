<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="#be1a20" >

            <ImageView android:id="@+id/navbar_image_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_centerVertical="true"
                android:src="@drawable/common_titlebar_left"/>

            <Button
                android:id="@+id/loa_button_chongzhi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:text="重置"
                />
            <TextView android:id="@+id/navbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#ffffff"
                android:textSize="20sp"/>
            <ProgressBar
                android:id="@+id/navbar_pb"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_toRightOf="@id/navbar_title"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/common_loading_progress"
                android:visibility="gone"
                />
        </RelativeLayout>

        <!-- 标题栏 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/loan_title_sy"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center"
                android:text="@string/loan_title_sy"
                android:textColor="@color/custom_titlebar_text"
                android:textSize="16sp" />
            <View
                android:layout_width="1px"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@color/divider_line" />
            <TextView
                android:id="@+id/loan_title_gj"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center"
                android:text="@string/loan_title_gj"
                android:textColor="@color/custom_titlebar_text"
                android:textSize="16sp" />
            <View
                android:layout_width="1px"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"
                android:background="@color/divider_line" />
            <TextView
                android:id="@+id/loan_title_zh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.0"
                android:background="@null"
                android:gravity="center"
                android:text="@string/loan_title_zh"
                android:textColor="@color/custom_titlebar_text"
                android:textSize="16sp" />
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:background="@color/divider_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/loancalc_paytypelayout"
                android:layout_width="match_parent"
                android:layout_height="43dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="还款方式"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/loancalc_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/common_rawright_black" />

                <TextView
                    android:id="@+id/loancalc_paytypetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:textColor="@color/content_text"
                    android:layout_toLeftOf="@id/loancalc_row"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dip"
            android:background="@color/divider_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:layout_marginRight="10.0dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/loancalc_counttypelayout"
                android:layout_width="match_parent"
                android:layout_height="43dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="计算方式"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/loancalc_row1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:src="@drawable/common_rawright_black" />

                <TextView
                    android:id="@+id/loancalc_counttypetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/loancalc_row1"
                    android:textColor="@color/content_text"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/loa_line_1"
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10.0dip"
            android:background="@color/divider_line" />
        <LinearLayout
            android:id="@+id/loancalc_numtype1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"

            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="单价："
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/loancalc_preprice"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/small_title"
                    android:background="@null"
                    android:inputType="number" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20dp"
                    android:text="元/平方米"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/divider_line" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="面积："
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/loancalc_size"
                    android:layout_width="100dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="@color/small_title"
                    android:inputType="number" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20dp"
                    android:text="平方米"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />
            </LinearLayout>

            <View

                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/divider_line" />

            <RelativeLayout
                android:id="@+id/loancalc_chengshulayout"
                android:layout_width="match_parent"
                android:layout_height="43dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="按揭成数"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/taxcalc_row"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/common_rawright_black" />

                <TextView
                    android:id="@+id/loancalc_chengshutext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/taxcalc_row"
                    android:textColor="@color/content_text"
                    android:textSize="14sp" />
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/loancalc_numtype2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="贷款总额："
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/loancalc_pricetotal"
                    android:layout_width="100dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="@color/small_title"
                    android:inputType="number" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20dp"
                    android:text="万元"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/loancalc_numtype3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="商业贷款："
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/loancalc_pricetotalsy"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5dp"
                    android:background="@null"
                    android:textSize="14sp"
                    android:textColor="@color/small_title"
                    android:inputType="number" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20dp"
                    android:text="万元"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />
            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/divider_line" />
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="43dip"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:text="公积金贷款："
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/loancalc_pricetotalgj"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="10.0dip"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginTop="5dp"
                    android:textSize="14sp"
                    android:textColor="@color/content_text"
                    android:background="@null"
                    android:inputType="number" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10.0dip"
                    android:layout_marginRight="20dp"
                    android:text="万元"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_marginLeft="10dp"
            android:background="@color/divider_line" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10.0dip"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/loancalc_yearslayout"
                android:layout_width="match_parent"
                android:layout_height="43dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="按揭年数"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/loancalc_row2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/common_rawright_black" />

                <TextView
                    android:id="@+id/loancalc_yearstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/content_text"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10.0dip"
                    android:layout_toLeftOf="@id/loancalc_row2"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/divider_line" />

            <RelativeLayout
                android:id="@+id/loancalc_rategjlayout"
                android:layout_width="match_parent"
                android:layout_height="43dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="公积金利率"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/loancalc_percent_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/content_text"
                    android:layout_marginRight="30dp"
                    android:text="%"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/common_rawright_black" />

                <EditText
                    android:id="@+id/loancalc_rategjtext"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/loancalc_percent_1"
                    android:background="@drawable/text_shape_bg"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/loancalc_ratesytext_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/content_text"
                    android:layout_toLeftOf="@id/loancalc_rategjtext"
                    android:textSize="14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/loa_line"
                android:layout_width="fill_parent"
                android:layout_height="1.0px"
                android:background="@color/divider_line" />

            <RelativeLayout
                android:id="@+id/loancalc_ratesylayout"
                android:layout_width="match_parent"
                android:layout_height="43dip" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10.0dip"
                    android:text="商业利率"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/loancalc_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/content_text"
                    android:layout_marginRight="30dp"
                    android:text="%"
                    android:textSize="14sp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20.0dip"
                    android:src="@drawable/common_rawright_black" />

                <EditText
                    android:id="@+id/loancalc_editratesy"
                    android:layout_width="45dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@id/loancalc_percent"
                    android:background="@drawable/text_shape_bg"
                    android:gravity="center"
                    android:inputType="numberDecimal"
                    android:textColor="@color/small_title"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/loancalc_ratesytext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/content_text"
                    android:layout_toLeftOf="@id/loancalc_editratesy"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <Button
            android:id="@+id/loancalc_button"
            android:layout_width="250dp"
            android:layout_height="38dp"
            android:layout_margin="10dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_red_content"
            android:text="计算"
            android:textColor="@color/white"
            android:textSize="16sp"/>
    </LinearLayout>

</ScrollView>